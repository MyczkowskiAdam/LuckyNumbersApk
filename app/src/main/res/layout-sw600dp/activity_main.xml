<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:tag="tablet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luckynumbers.mycax.luckynumbers.MainActivity">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/navigation"/>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        app:bb_tabXmlResource="?attr/navigation_theme"
        app:bb_inActiveTabAlpha="0.6"
        app:bb_inActiveTabColor="@android:color/white"
        app:bb_activeTabColor="@android:color/white"
        app:bb_behavior="shifting"
        app:bb_tabletMode="true"/>

</RelativeLayout>
